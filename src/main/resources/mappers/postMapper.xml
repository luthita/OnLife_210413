<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.onlife.post.dao.PostDAO">
    <select id="selectPostListByUserId"  parameterType="int" resultType="com.onlife.post.model.Post">
        SELECT
           `id`,
			`userId`,
			`subject`,
			`content`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
        FROM
            `post`
        WHERE
        	`userId` = #{userId}
    </select>
    <select id="selectPostByUserId"  parameterType="map" resultType="com.onlife.post.model.Post">
        SELECT
           `id`,
			`userId`,
			`subject`,
			`content`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
        FROM
            `post`
        WHERE
        	`userId` = #{userId}
        <if test="direction == null">
        ORDER BY `id` DESC
        LIMIT 1
        </if>
        <if test="direction == 'prev'">
        	AND `id`= #{standardId}
        </if>
        <if test="direction == 'prev'">
        	AND `id`= #{standardId}
        </if>
    </select>
    
    <select id="selectPostIdByUserIdAndSort" parameterType="map" resultType="int">
		SELECT
			`id`
		FROM 
			`post`
		WHERE
			`userId` = #{userId}
		ORDER BY `id` ${sort}
		LIMIT 1
	</select>
	
    <insert id="insertPost" parameterType="map">
    	INSERT INTO `post`
    	(
    		`userId`,
			`subject`,
			`content`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
    	)
    	VALUES
    	(
    		#{userId}
    		, #{subject}
    		, #{content}
    		, #{imagePath}
    		, NOW()
    		, NOW()
    	)
    </insert>
    
    <select id="selectPostByPostIdAndUserId" parameterType="map" resultType="com.onlife.post.model.Post">
    	SELECT
    		`id`,
			`userId`,
			`subject`,
			`content`,
			`imagePath`,
			`createdAt`,
			`updatedAt`
		FROM
			`post`
		WHERE
			`id` = #{postId}
			AND `userId` = #{userId}
    </select>
    
    <update id="updatePost" parameterType="map">
    	UPDATE `post`
    	SET
    		`subject` = #{subject}
    		, `content` = #{content}
    		, `updatedAt` = NOW()
    		<!-- imagePath 가 null이 아닐때만 수정한다. -->
    		<if test="imagePath != null">
    		, `imagePath` = #{imagePath}
    		</if>
    	WHERE
    		`id` = #{postId}
    		AND `userId` = #{userId}
    </update>
 </mapper>